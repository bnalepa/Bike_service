@model IEnumerable<Bike_service.Models.Rental>

@{
    ViewData["Title"] = "Index";
}

<h1>Index</h1>

<p>
    <a asp-action="Create">Create New</a>
</p>
<table class="table">
    <thead>
        <tr>
            <th>
                @Html.DisplayNameFor(model => model.StartDate)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.EndDate)
            </th>
            <th></th>
        </tr>
    </thead>
    <tbody>
@foreach (var item in Model) {
        <tr>
            <td>
                @Html.DisplayFor(modelItem => item.StartDate)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.EndDate)
            </td>
            <td>
                    @if (ViewContext.HttpContext.User.IsInRole("Administrator"))
                    {
                        <a asp-action="Edit" asp-route-id="@item.Id">Edytuj</a> <br>
                        <a asp-action="Details" asp-route-id="@item.Id">Szczegóły</a> <br>
                        <a asp-action="Delete" asp-route-id="@item.Id">Usuń</a>
                    }
            </td>
        </tr>
}
    </tbody>
</table>
